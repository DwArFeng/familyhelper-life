<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
        xmlns="http://www.springframework.org/schema/beans"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://dubbo.apache.org/schema/dubbo
        http://dubbo.apache.org/schema/dubbo/dubbo.xsd"
>

    <dubbo:application name="familyhelper-life-node">
        <dubbo:parameter key="qos.enable" value="false"/>
    </dubbo:application>

    <!-- zookeeper注册中心 -->
    <dubbo:registry address="${dubbo.registry.zookeeper.address}" timeout="${dubbo.registry.zookeeper.timeout}"/>

    <!-- dubbo协议 -->
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.dubbo.port}" host="${dubbo.protocol.dubbo.host}"
                    dispatcher="message" threadpool="fixed" threads="100"/>
    <!-- hessian协议 -->
    <dubbo:protocol name="hessian" port="${hessian.protocol.dubbo.port}" server="jetty"/>

    <!-- 默认使用dubbo协议 -->
    <dubbo:provider protocol="dubbo"/>

    <!-- 向注册中心注册暴露服务地址,注册服务 -->
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.UserMaintainService"
            ref="userMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PopbMaintainService"
            ref="popbMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbSetMaintainService"
            ref="pbSetMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbSetOperateService"
            ref="pbSetOperateServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbNodeMaintainService"
            ref="pbNodeMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbNodeOperateService"
            ref="pbNodeOperateServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbItemMaintainService"
            ref="pbItemMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbItemOperateService"
            ref="pbItemOperateServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbRecordMaintainService"
            ref="pbRecordMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbRecordOperateService"
            ref="pbRecordOperateServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbFileInfoMaintainService"
            ref="pbFileInfoMaintainServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.familyhelper.life.stack.service.PbFileOperateService"
            ref="pbFileOperateServiceImpl"
            group="${dubbo.provider.group}"
    />

    <!-- 向注册中心注册暴露服务地址,注册消费者服务 -->
    <dubbo:reference
            id="longIdService"
            interface="com.dwarfeng.sfds.stack.service.LongIdService"
            group="${dubbo.consumer.snowflake.group}"
    />
</beans>
